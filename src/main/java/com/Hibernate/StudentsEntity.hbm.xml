<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.Hibernate.StudentsEntity" table="students" schema="mywork">
        <id name="id">
            <column name="id" sql-type="int"/>
        </id>
        <property name="fio">
            <column name="FIO" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="ball">
            <column name="ball" sql-type="int" not-null="true"/>
        </property>
        <property name="lesson">
            <column name="lesson" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="lesson_id">
            <column name="lesson" sql-type="varchar(255)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>